<div class="item">
  <div class="left">

  </div>
  <div class="right">
    <p class="title"><%= link_to item.title, item -%></p>

    <p class="description"><%= item.content.to_s.truncate(67) -%></p>

    <p class="bottom">
      由
      <%= item.user.try :name -%>
      于
      <%= item.created_at.strftime('%Y-%m-%d %H:%M:%S') -%>
      发布，
      作者：<%= link_to item.author, item.author_class -%>
    </p>
  </div>
</div>