<h1>用户列表</h1>

<table>
  <tr>
    <th>邮箱</th>
    <th>昵称</th>
    <th>登陆次数</th>
    <th>注册时间</th>
    <th>最后登陆时间</th>
    <th>最后登陆IP</th>
    <th>操作</th>
  </tr>

  <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to user.name, user -%></td>
        <td><%= user.sign_in_count -%></td>
        <td><%= user.created_at.strftime('%Y-%m-%d %H:%M:%S') -%></td>
        <td><%= user.last_sign_in_at.strftime('%Y-%m-%d %H:%M:%S') if user.last_sign_in_at.present? -%></td>
        <td><%= user.last_sign_in_ip -%></td>
        <td>
          <%= link_to '编辑', edit_user_path(user) %>
          <%= link_to '删除', user, method: :delete, data: {confirm: 'Are you sure?'} %>
        </td>
      </tr>
  <% end %>
</table>
<div class="panel-footer clearfix">
  <%= will_paginate @users %>
</div>
