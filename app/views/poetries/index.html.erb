<h1>诗词列表</h1>

<table>
  <tr>
    <th>标题</th>
    <th>内容</th>
    <th>作者</th>
    <th>时间</th>
    <th>操作</th>
  </tr>

  <% @poetries.each do |poetry| %>
      <tr>
        <td><%= poetry.title %></td>
        <td width="60%"><%= poetry.content -%></td>
        <td><%= poetry.author -%></td>
        <td><%= poetry.created_at.strftime('%Y-%m-%d %H:%M:%S') -%></td>
        <td>
          <%= link_to '查看', poetry %>
          <%= link_to '编辑', edit_poetry_path(poetry) %>
          <%= link_to '删除', poetry, method: :delete, data: {confirm: 'Are you sure?'} %>
        </td>
      </tr>
  <% end %>
</table>
<div class="panel-footer clearfix">
  <%= will_paginate @poetries %>
  共 <%= @poetries.total_entries %> 条
</div>
<br/>

<%= link_to '新建诗词', new_poetry_path %>
